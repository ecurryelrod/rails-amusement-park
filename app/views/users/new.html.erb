<h1>Sign Up Page</h1>

<%= form_for @user do |f| %>
    <% if @user.errors.any? %>
        <div id="error_explanation">
            <h2>
                <%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:
            </h2>

            <ul>
            <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
            </ul>
        </div>
    <% end %>

    <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control" %>
    </div>

    <div class="form-group">
        <%= f.label :height, "Height (in inches)" %>
        <%= f.number_field :height, class: "form-control" %>
    </div>

    <div class="form-group">
        <%= f.label :happiness, "How happy are you? (scale 1-5)" %>
        <%= f.number_field :happiness, class: "form-control" %>
    </div>
    
    <div class="form-group">
        <%= f.label :nausea, "Current Nausea Level (scale 1-5)" %>
        <%= f.number_field :nausea, class: "form-control" %>
    </div>

    <div class="form-group">
        <%= f.label :tickets, "How much money do you want to spend on tickets?" %>
        <%= f.number_field :tickets, class: "form-control" %>
    </div>

    <div class="form-group">
        <%= f.label :admin, "Check box if you are a theme park owner" %>
        <%= f.check_box :admin, class: "form-check-input" %>
    </div>

    <div class="form-group">
        <%= f.label :password %>
        <%= f.password_field :password, class: "form-control" %>
    </div>
    
    <div class="actions">
        <%= f.submit %>
    </div>
<% end %>