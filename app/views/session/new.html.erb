<h1>Log In Page</h1>

<%= form_tag '/signin' do %>
    <div class="form-group">
        <%= collection_select :user, :name, User.all, :name, :name, prompt: "Please select your username from this dropdown" %>
    </div>
    
    <div class="form-group">
        <%= label_tag :password %>
        <%= password_field_tag :password, nil, class: "form-control" %>
    </div>
    
    <div class="actions">
        <%= submit_tag "Sign In" %>
    </div>
<% end %>